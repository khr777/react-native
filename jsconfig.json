{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"moduleResolution": "classic",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@component/*": [
				"./src/component/*"
			],
			"@image/*": [
				"./src/image/*"
			],
			"@scene/*": [
				"./src/scene/*"
			],
			"@style/*": [
				"./src/style/*"
			],
			"@util/*": [
				"./src/util/*"
			],
			"@variable/*": [
				"./src/variable/*"
			],
		}
	}
}